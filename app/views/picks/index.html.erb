<h1>Listing picks</h1>

<table>
  <tr>
    <th>Team1</th>
    <th>Team2</th>
    <th>Winner</th>
    <th>Round</th>
    <th>Game number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @picks.each do |pick| %>
  <tr>
    <td><%= pick.team1 %></td>
    <td><%= pick.team2 %></td>
    <td><%= pick.winner %></td>
    <td><%= pick.round %></td>
    <td><%= pick.game_number %></td>
    <td><%= link_to 'Show', pick %></td>
    <td><%= link_to 'Edit', edit_pick_path(pick) %></td>
    <td><%= link_to 'Destroy', pick, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Pick', new_pick_path %>
